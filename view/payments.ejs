<!DOCTYPE html>
<html>

<head>
    <title>Paid Orders</title>
</head>

<body>
    <h1>Paid Orders</h1>
    <a href="/dashboard">Back to Dashboard</a> |
    <a href="/orders">All Orders</a> |
    <a href="/logout">Logout</a>

    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (orders.length===0) { %>
                <tr>
                    <td colspan="5">No paid orders found.</td>
                </tr>
                <% } else { %>
                    <% orders.forEach(order=> { %>
                        <tr>
                            <td>
                                <%= order.id %>
                            </td>
                            <td>
                                <%= order.title %>
                            </td>
                            <td>
                                <%= order.description %>
                            </td>
                            <td>
                                <%= new Date(order.created_at).toLocaleString() %>
                            </td>
                            <td>Paid âœ…</td>
                        </tr>
                        <% }) %>
                            <% } %>
        </tbody>
    </table>
</body>

</html>