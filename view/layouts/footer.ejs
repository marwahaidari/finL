<style>
    .footer {
        background: #0b0f19;
        color: #fff;
        text-align: center;
        padding: 50px 20px 30px;
        font-family: 'Poppins', sans-serif;
        position: relative;
        overflow: hidden;
        border-top: 2px solid rgba(0, 255, 200, 0.2);
    }

    /* Glowing animated top line */
    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: -50%;
        width: 200%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #00ffe0, transparent);
        animation: glow-move 4s linear infinite;
    }

    @keyframes glow-move {
        0% {
            transform: translateX(-50%);
        }

        100% {
            transform: translateX(50%);
        }
    }

    .footer h3 {
        font-size: 1.8em;
        font-weight: 600;
        color: #00ffe0;
        margin-bottom: 15px;
        text-transform: uppercase;
        text-shadow: 0 0 10px #00ffe0;
    }

    .footer p {
        color: #bbb;
        max-width: 600px;
        margin: 0 auto 25px;
        font-size: 0.95em;
        line-height: 1.5em;
    }

    .footer .contact-info {
        margin-bottom: 25px;
        flex-direction: column;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .footer .contact-info p {
        margin: 5px 0;
    }

    .footer .contact-info a {
        color: #00ffe0;
        text-decoration: none;
        transition: 0.3s;
    }

    .footer .contact-info a:hover {
        color: #fff;
        text-shadow: 0 0 8px #00ffe0;
    }

    .footer .social-icons {
        margin-bottom: 20px;
    }

    .footer .social-icons a {
        color: #00ffe0;
        margin: 0 10px;
        font-size: 1.4em;
        transition: 0.3s;
    }

    .footer .social-icons a:hover {
        color: #fff;
        text-shadow: 0 0 10px #00ffe0;
    }

    .footer .links {
        margin-bottom: 20px;
    }

    .footer .links a {
        color: #bbb;
        margin: 0 15px;
        text-decoration: none;
        transition: color 0.3s;
        font-size: 0.95em;
    }

    .footer .links a:hover {
        color: #00ffe0;
    }

    .footer .bottom-text {
        font-size: 0.85em;
        color: #777;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 20px;
        margin-top: 20px;
    }

    /* Responsive Layout */
    @media (max-width: 768px) {
        .footer h3 {
            font-size: 1.5em;
        }

        .footer .links a {
            display: block;
            margin: 8px 0;
        }

        .footer .social-icons a {
            margin: 0 8px;
            font-size: 1.2em;
        }

        .footer p,
        .footer .contact-info p {
            font-size: 0.9em;
        }
    }

    @media (max-width: 480px) {
        .footer h3 {
            font-size: 1.3em;
        }

        .footer p,
        .footer .contact-info p {
            font-size: 0.85em;
        }
    }
</style>

