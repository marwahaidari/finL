<!DOCTYPE html>
<html>

<head>
    <title>Order Reviews</title>
</head>

<body>
    <h1>Reviews for Order <%= orderId %>
    </h1>
    <a href="/orders">Back to Orders</a> | <a href="/logout">Logout</a>

    <h2>Add Review</h2>
    <form action="/orders/<%= orderId %>/reviews" method="POST">
        <label>Rating:</label>
        <select name="rating" required>
            <option value="1">1 ⭐</option>
            <option value="2">2 ⭐⭐</option>
            <option value="3">3 ⭐⭐⭐</option>
            <option value="4">4 ⭐⭐⭐⭐</option>
            <option value="5">5 ⭐⭐⭐⭐⭐</option>
        </select><br>
        <textarea name="comment" placeholder="Your comment" required></textarea><br>
        <button type="submit">Submit</button>
    </form>

    <h2>All Reviews</h2>
    <ul>
        <% reviews.forEach(r=> { %>
            <li>
                <strong>
                    <%= r.user_name %>
                </strong> - <%= r.rating %> ⭐ - <%= r.comment %>
                        (<%= new Date(r.created_at).toLocaleString() %>)
                            <form action="/orders/<%= orderId %>/reviews/<%= r.id %>/delete" method="POST"
                                style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
            </li>
            <% }) %>
    </ul>
    <h2>Average Rating: <%= avgRating %> ⭐</h2>

</body>

</html>