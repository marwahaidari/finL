<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg mt-8">
    <h2 class="text-2xl font-bold mb-6">
        <%= service ? "ویرایش سرویس" : "افزودن سرویس جدید" %>
    </h2>

    <form id="serviceForm" method="POST"
        action="<%= service ? '/services/' + service.id + '?_method=PUT' : '/services' %>" class="space-y-4">

        <!-- Service Name -->
        <div>
            <label class="block text-gray-700 font-medium mb-1">نام سرویس</label>
            <input type="text" name="name" value="<%= service ? service.name : '' %>"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" required>
        </div>

        <!-- Department -->
        <div>
            <label class="block text-gray-700 font-medium mb-1">دپارتمان</label>
            <select name="department_id" required
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400">
                <option value="">انتخاب دپارتمان</option>
                <% departments.forEach(dept=> { %>
                    <option value="<%= dept.id %>" <%=service && service.department_id===dept.id ? "selected" : "" %> >
                        <%= dept.name %>
                    </option>
                    <% }) %>
            </select>
        </div>

        <!-- Fee -->
        <div>
            <label class="block text-gray-700 font-medium mb-1">هزینه</label>
            <input type="number" name="fee" value="<%= service ? service.fee : '' %>"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" required>
        </div>

        <!-- Required Documents -->
        <div>
            <label class="block text-gray-700 font-medium mb-1">مدارک مورد نیاز (اختیاری)</label>
            <textarea name="required_documents" rows="3"
                class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"><%= service ? service.required_documents : '' %></textarea>
        </div>

        <!-- Submit -->
        <div class="flex justify-end">
            <button type="submit"
                class="px-6 py-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition">
                <%= service ? "ویرایش سرویس" : "افزودن سرویس" %>
            </button>
        </div>
    </form>
</div>