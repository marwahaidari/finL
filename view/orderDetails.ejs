<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <title>جزئیات سفارش #<%= order.id %>
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');

        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #0f172a, #1e293b);
            min-height: 100vh;
            color: #f1f5f9;
            padding: 3rem 1rem;
        }

        .card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 2rem;
            padding: 2rem;
            max-width: 700px;
            margin: 0 auto 1.5rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.3rem 0.6rem;
            border-radius: 9999px;
            font-weight: 600;
        }

        a {
            color: #facc15;
            text-decoration: underline;
        }

        .flex-gap {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .flash-message {
            padding: 0.75rem 1rem;
            border-radius: 1rem;
            margin-bottom: 1rem;
        }

        .error-msg {
            background: rgba(248, 113, 113, 0.2);
            color: #f87171;
        }

        .success-msg {
            background: rgba(132, 204, 22, 0.2);
            color: #84cc16;
        }
    </style>
</head>
<%- include('layouts/header') %>

    <body>
        <% if (typeof error_msg !=='undefined' && error_msg) { %>
            <div class="flash-message error-msg">
                <%= error_msg %>
            </div>
            <% } %>
                <% if (typeof success_msg !=='undefined' && success_msg) { %>
                    <div class="flash-message success-msg">
                        <%= success_msg %>
                    </div>
                    <% } %>

                        <div class="card">
                            <h1 class="text-2xl font-bold mb-4 flex items-center gap-2"><i data-lucide="clipboard"></i>
                                جزئیات سفارش
                                #<%= order.id %>
                            </h1>

                            <p class="mb-2"><strong>عنوان:</strong>
                                <%= order.title || '—' %>
                            </p>
                            <p class="mb-2"><strong>توضیحات:</strong>
                                <%= order.description || '—' %>
                            </p>
                            <p class="mb-2"><strong>کاربر:</strong>
                                <%= order.user_name || '—' %>
                            </p>
                            <p class="mb-2"><strong>ایجاد شده در:</strong>
                                <%= order.created_at ? new Date(order.created_at).toLocaleString('fa-IR') : '—' %>
                            </p>

                            <p class="mb-2"><strong>وضعیت:</strong>
                                <% if(order.status?.toLowerCase()==='pending' ){ %>
                                    <span class="badge" style="background:#f59e0b;color:white;">در حال انجام</span>
                                    <% } else if(order.status?.toLowerCase()==='completed' ){ %>
                                        <span class="badge" style="background:#3b82f6;color:white;">تکمیل‌شده</span>
                                        <% } else if(order.status){ %>
                                            <span class="badge" style="background:#ef4444;color:white;">
                                                <%= order.status %>
                                            </span>
                                            <% } else { %>
                                                —
                                                <% } %>
                            </p>

                            <p class="mb-2" id="payment-status"><strong>پرداخت:</strong>
                                <% if(order.paid){ %>
                                    <span class="badge" style="background:#10b981;color:white;">پرداخت شده ✅</span>
                                    <% } else { %>
                                        <span class="badge" style="background:#ef4444;color:white;">پرداخت نشده ❌</span>
                                        <% } %>
                            </p>

                            <% if(!order.paid){ %>
                                <form action="/orders/pay/<%= order.id %>" method="POST">
                                    <button
                                        class="w-full py-3 rounded-lg bg-green-600 hover:bg-green-700 text-white">پرداخت
                                        سفارش</button>
                                </form>
                                <% } %>
                        </div>

                        <% if(order.attachments?.length>0){ %>
                            <div class="card">
                                <h2 class="text-xl font-semibold mb-3">پیوست‌ها</h2>
                                <ul class="space-y-2">
                                    <% order.attachments.forEach(file=> {
                                        const url = file.filepath || file.path || ('/uploads/' + file.filename);
                                        const name = file.originalname || file.filename || 'فایل';
                                        %>
                                        <li><a href="<%= url %>" target="_blank"
                                                class="flex items-center gap-2 text-facc15 hover:underline"><i
                                                    data-lucide="file-text"></i>
                                                <%= name %>
                                            </a></li>
                                        <% }) %>
                                </ul>
                            </div>
                            <% } %>

                                <div class="card flex-gap">
                                    <a href="/orders/edit/<%= order.id %>"
                                        class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 flex items-center gap-2"><i
                                            data-lucide="edit-2"></i> ویرایش</a>
                                    <a href="/orders/delete/<%= order.id %>"
                                        class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 flex items-center gap-2"><i
                                            data-lucide="trash-2"></i> حذف</a>
                                </div>

                                <script>
                                    lucide.createIcons();
                                    const socket = io();
                                    const currentOrderId = "<%= order.id %>";
                                    socket.on('orderPaid', (data) => {
                                        const incoming = data.id || data.orderId || data.order_id;
                                        if (String(incoming) === String(currentOrderId)) {
                                            const el = document.getElementById('payment-status');
                                            if (el) el.innerHTML = '<strong>پرداخت:</strong> <span class="badge" style="background:#10b981;color:white;">پرداخت شده ✅</span>';
                                        }
                                    });
                                </script>
                                <%- include('layouts/footer') %>

    </body>

</html>