    <script src="/socket.io/socket.io.js"></script>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Tahoma, sans-serif;
            background: #f5f5f7;
            direction: rtl;
            color: #1f2937;
        }

        header {
            background: #1e3a8a;
            color: #fff;
            padding: 24px;
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            position: relative;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        #notificationBadge {
            position: absolute;
            top: 18px;
