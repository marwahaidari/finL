<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password | Citizen Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');

        body {
            font-family: 'Montserrat', sans-serif;
            overflow-x: hidden;
            background: linear-gradient(135deg, #0f172a, #1e293b);
            min-height: 100vh;
            position: relative;
        }

        /* Floating background circles */
        .circle {
            position: absolute;
            border-radius: 50%;
            opacity: 0.15;
            animation: float 20s ease-in-out infinite;
        }

        .circle1 {
            width: 120px;
            height: 120px;
            background: #facc15;
            top: 10%;
            left: 20%;
            animation-delay: 0s;
        }

        .circle2 {
            width: 80px;
            height: 80px;
            background: #3b82f6;
            top: 50%;
            right: 15%;
            animation-delay: 5s;
        }

        .circle3 {
            width: 150px;
            height: 150px;
            background: #10b981;
            bottom: 10%;
            left: 10%;
            animation-delay: 10s;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px) translateX(0px);
            }

            50% {
                transform: translateY(-30px) translateX(30px);
            }
        }

        /* Card styling */
        .card {
            backdrop-filter: blur(15px);
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 2rem;
            padding: 3rem;
            max-width: 400px;
            width: 90%;
            color: #f1f5f9;
            position: relative;
            z-index: 1;
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.6);
            margin: 6rem auto;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .fade-in {
            animation: fadeIn 0.6s ease forwards;
        }

        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(-15px);
            }

            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        input,
        button {
            font-family: 'Montserrat', sans-serif;
        }

        .input-container {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            border-radius: 1rem;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.1);
            transition: border 0.3s ease, box-shadow 0.3s ease;
        }

        .input-container:hover {
            border: 1px solid #facc15;
            box-shadow: 0 0 15px rgba(250, 204, 21, 0.4);
        }

        .input-container i {
            padding: 0 1rem;
            color: #facc15;
            font-size: 1.2rem;
        }

        .input-container input {
            flex: 1;
            padding: 1rem;
            background: transparent;
            border: none;
            color: #f1f5f9;
            font-size: 1rem;
            outline: none;
        }

        input::placeholder {
            color: rgba(241, 245, 249, 0.6);
        }

        button {
            background: linear-gradient(90deg, #facc15, #eab308);
            padding: 0.75rem 1rem;
            border-radius: 1rem;
            border: none;
            width: 100%;
            font-weight: 600;
            color: #1e293b;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(250, 204, 21, 0.6);
        }

        a {
            color: #facc15;
            text-decoration: underline;
        }

        .flash-message {
            padding: 0.75rem 1rem;
            border-radius: 1rem;
            margin-bottom: 1rem;
            font-weight: 500;
            text-align: center;
        }

        .error-msg {
            background: rgba(248, 113, 113, 0.2);
            color: #f87171;
        }

        .success-msg {
            background: rgba(132, 204, 22, 0.2);
            color: #84cc16;
        }

        /* Star effect */
        .star {
            position: absolute;
            width: 6px;
            height: 6px;
            background: gold;
            border-radius: 50%;
            pointer-events: none;
            opacity: 0.8;
            transform: translate(-50%, -50%);
            transition: transform 0.2s ease, opacity 0.5s ease;
            z-index: 2;
        }

        @media (max-width:500px) {
            .card {
                padding: 2rem;
                margin: 4rem 1rem;
            }
        }
    </style>
</head>

<body>

    <!-- Floating circles -->
    <div class="circle circle1"></div>
    <div class="circle circle2"></div>
    <div class="circle circle3"></div>

    <!-- Card -->
    <div class="card relative">
        <div class="text-center mb-6">
            <img src="/images/logo.png" alt="Logo" class="w-16 mx-auto mb-4">
            <h1 class="text-2xl font-bold">Forgot Password</h1>
            <p class="text-gray-400 mt-1">Enter your email to reset your password</p>
        </div>

        <!-- Flash Messages -->
        <% if (typeof error !=='undefined' && error) { %>
            <div class="flash-message error-msg fade-in">
                <%= error %>
            </div>
            <% } %>
                <% if (typeof success_msg !=='undefined' && success_msg) { %>
                    <div class="flash-message success-msg fade-in">
                        <%= success_msg %>
                    </div>
                    <% } %>

                        <!-- Form -->
                        <form action="/forgot-password" method="POST" class="space-y-4">
                            <div class="input-container">
                                <i class="fa-solid fa-envelope"></i>
                                <input type="email" name="email" placeholder="Email Address" required>
                            </div>
                            <button type="submit"><i class="fa-solid fa-paper-plane mr-2"></i>Send Reset Link</button>
                        </form>

                        <p class="mt-4 text-center text-gray-400">
                            <a href="/login">Back to Login</a>
                        </p>
    </div>

    <!-- Star animation -->
    <script>
        const card = document.querySelector('.card');
        card.addEventListener('mousemove', e => {
            const star = document.createElement('div');
            star.classList.add('star');
            const rect = card.getBoundingClientRect();
            star.style.left = (e.clientX - rect.left) + 'px';
            star.style.top = (e.clientY - rect.top) + 'px';
            card.appendChild(star);
            setTimeout(() => {
                star.style.opacity = '0';
                star.style.transform = 'translate(-50%, -50%) scale(0.5)';
            }, 50);
            setTimeout(() => star.remove(), 700);
        });
    </script>

</body>

</html>