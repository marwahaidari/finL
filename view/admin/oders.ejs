<h1>Manage Orders</h1>
<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>User</th>
        <th>Title</th>
        <th>Description</th>
        <th>Created At</th>
        <th>Actions</th>
    </tr>
    <% orders.forEach(o=> { %>
        <tr>
            <td>
                <%= o.id %>
            </td>
            <td>
                <%= o.user_id %>
            </td>
            <td>
                <%= o.title %>
            </td>
            <td>
                <%= o.description %>
            </td>
            <td>
                <%= new Date(o.created_at).toLocaleString() %>
            </td>
            <td>
                <form action="/admin/orders/delete/<%= o.id %>" method="POST"
                    onsubmit="return confirm('Delete order?')">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
</table>