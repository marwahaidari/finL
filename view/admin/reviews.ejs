<h1>Manage Reviews</h1>
<table border="1" cellpadding="5">
    <tr>
        <th>ID</th>
        <th>User</th>
        <th>Order</th>
        <th>Rating</th>
        <th>Comment</th>
        <th>Actions</th>
    </tr>
    <% reviews.forEach(r=> { %>
        <tr>
            <td>
                <%= r.id %>
            </td>
            <td>
                <%= r.user_name %>
            </td>
            <td>
                <%= r.order_title %>
            </td>
            <td>
                <%= r.rating %>‚≠ê
            </td>
            <td>
                <%= r.comment %>
            </td>
            <td>
                <form action="/admin/reviews/delete/<%= r.id %>" method="POST"
                    onsubmit="return confirm('Delete review?')">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
</table>