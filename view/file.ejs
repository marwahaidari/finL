<h1>Files for Order #<%= orderId %>
</h1>
<a href="/dashboard">Back to Dashboard</a> | <a href="/logout">Logout</a>

<h2>Upload a new file</h2>
<form action="/orders/<%= orderId %>/files" method="POST" enctype="multipart/form-data">
    <input type="file" name="file" required>
    <button type="submit">Upload</button>
</form>

<h2>Uploaded Files</h2>
<ul>
    <% if (files.length===0) { %>
        <li>No files uploaded yet.</li>
        <% } else { %>
            <% files.forEach(file=> { %>
                <li>
                    <%= file.filename %> - Uploaded at <%= new Date(file.uploaded_at).toLocaleString() %>
                            (<a href="/<%= file.filepath %>" target="_blank">Download</a>)
                </li>
                <% }) %>
                    <% } %>
</ul>