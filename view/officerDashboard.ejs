<h1>Officer Dashboard</h1>
<a href="/dashboard">Back to Dashboard</a> | <a href="/logout">Logout</a>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    <% orders.forEach(order=> { %>
        <tr>
            <td>
                <%= order.id %>
            </td>
            <td>
                <%= order.title %>
            </td>
            <td>
                <%= order.description %>
            </td>
            <td>
                <%= order.status || 'Pending' %>
            </td>
            <td>
                <form action="/officer/orders/<%= order.id %>/approve" method="POST" style="display:inline;">
                    <button type="submit">Approve</button>
                </form>
                <form action="/officer/orders/<%= order.id %>/reject" method="POST" style="display:inline;">
                    <button type="submit">Reject</button>
                </form>
            </td>
        </tr>
        <% }) %>
</table>