<%- include('../layouts/header', { title: 'Department Form' }) %>

    <h2>
        <%= department ? 'Edit Department' : 'New Department' %>
    </h2>

    <form method="POST" action="<%= department ? '/departments/edit/' + department.id : '/departments/new' %>">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="<%= department ? department.name : '' %>"
                required>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control"
                required><%= department ? department.description : '' %></textarea>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>

    <%- include('../layouts/footer') %>