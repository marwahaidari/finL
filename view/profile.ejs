<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= user?.name || 'کاربر' %> - پروفایل
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-p1CmR4F8O0wY6bL3Ox+Kw3N0d8PjZq3B3yV6Z7bD6d3Gz8T1Ek8+uGyz+6kzZh6XG0N3a1XQFJ0WlRzD7B4JbA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            direction: rtl;
            font-family: Vazir, sans-serif;
        }

        /* subtle tab underline animation */
        .tab-btn {
            transition: color 0.3s, border-color 0.3s;
        }

        .tab-btn-active {
            color: #1e40af;
            border-bottom: 2px solid #1e40af;
        }

        /* smooth card hover */
        .card-hover {
            transition: box-shadow 0.3s, transform 0.2s;
        }

        .card-hover:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
    </style>
</head>
<%- include('layouts/header') %>

    <body class="bg-gray-50 min-h-screen font-sans">
        <div class="container mx-auto py-10 px-4">
            <h1 class="text-3xl font-bold mb-8">سلام <%= user?.name || 'کاربر' %> 👋</h1>

            <% if (error_msg) { %>
                <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-md flex items-center gap-2">
                    <i class="fa-solid fa-triangle-exclamation"></i>
                    <span>
                        <%= error_msg %>
                    </span>
                </div>
                <% } %>

                    <% if (success_msg) { %>
                        <div class="mb-4 p-4 bg-green-100 text-green-700 rounded-md flex items-center gap-2">
                            <i class="fa-solid fa-circle-check"></i>
                            <span>
                                <%= success_msg %>
                            </span>
                        </div>
                        <% } %>

                            <div class="bg-white p-6 rounded-xl shadow-md space-y-6">
                                <!-- Tabs -->
                                <div class="flex border-b border-gray-200 mb-6 overflow-x-auto space-x-4">
                                    <button
                                        class="tab-btn tab-btn-active px-4 py-2 font-medium focus:outline-none whitespace-nowrap"
                                        data-tab="profile">پروفایل</button>
                                    <button
                                        class="tab-btn px-4 py-2 font-medium text-gray-500 hover:text-blue-700 focus:outline-none whitespace-nowrap"
                                        data-tab="password">تغییر رمز عبور</button>
                                    <button
                                        class="tab-btn px-4 py-2 font-medium text-gray-500 hover:text-blue-700 focus:outline-none whitespace-nowrap"
                                        data-tab="2fa">احراز دو مرحله‌ای</button>
                                    <button
                                        class="tab-btn px-4 py-2 font-medium text-gray-500 hover:text-blue-700 focus:outline-none whitespace-nowrap"
                                        data-tab="history">سوابق</button>
                                    <button
                                        class="tab-btn px-4 py-2 font-medium text-gray-500 hover:text-blue-700 focus:outline-none whitespace-nowrap"
                                        data-tab="reviews">بازخوردها</button>
                                    <button
                                        class="tab-btn px-4 py-2 font-medium text-red-600 hover:text-red-800 focus:outline-none whitespace-nowrap"
                                        data-tab="delete">حذف حساب</button>
                                </div>

                                <!-- Tab Contents -->
                                <div class="tab-content" id="profile-tab">
                                    <h2 class="text-2xl font-semibold mb-4">اطلاعات پروفایل</h2>
                                    <form action="/profile" method="POST" enctype="multipart/form-data"
                                        class="space-y-4">
                                        <div>
                                            <label for="name" class="block font-medium">نام و نام خانوادگی</label>
                                            <input type="text" id="name" name="name" value="<%= user?.name || '' %>"
                                                class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label for="email" class="block font-medium">ایمیل سازمانی</label>
                                            <input type="email" id="email" name="email" value="<%= user?.email || '' %>"
                                                class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label for="phone" class="block font-medium">شماره تماس</label>
                                            <input type="text" id="phone" name="phone" value="<%= user?.phone || '' %>"
                                                class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label for="department" class="block font-medium">اداره / دپارتمان</label>
                                            <input type="text" id="department" name="department"
                                                value="<%= user?.department || '' %>"
                                                class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label for="avatar" class="block font-medium">تصویر پروفایل
                                                (اختیاری)</label>
                                            <input type="file" id="avatar" name="avatar"
                                                class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <button type="submit"
                                            class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200">بروزرسانی
                                            پروفایل</button>
                                    </form>
                                </div>

                                <!-- بقیه تب‌ها مشابه با طراحی مینیمال -->
                                <div class="tab-content hidden" id="password-tab">
                                    <h2 class="text-2xl font-semibold mb-4">تغییر رمز عبور</h2>
                                    <form action="/profile/change-password" method="POST" class="space-y-4">
                                        <input type="password" placeholder="رمز فعلی"
                                            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500">
                                        <input type="password" placeholder="رمز جدید"
                                            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500">
                                        <input type="password" placeholder="تأیید رمز جدید"
                                            class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500">
                                        <button type="submit"
                                            class="px-6 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition duration-200">تغییر
                                            رمز</button>
                                    </form>
                                </div>
                            </div>
        </div>

        <script>
            const tabs = document.querySelectorAll(".tab-btn");
            const contents = document.querySelectorAll(".tab-content");

            tabs.forEach(tab => {
                tab.addEventListener("click", () => {
                    contents.forEach(c => c.classList.add("hidden"));
                    document.getElementById(tab.dataset.tab + "-tab").classList.remove("hidden");

                    tabs.forEach(t => t.classList.remove("tab-btn-active"));
                    tab.classList.add("tab-btn-active");
                });
            });
        </script>
        <%- include('layouts/footer') %>

    </body>

</html>