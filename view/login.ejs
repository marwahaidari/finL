<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Government Citizen Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
            position: relative;
            min-height: 100vh;
            background: linear-gradient(135deg, #4ade80, #06b6d4);
        }

        /* Floating stars for mouse effect */
        .star {
            position: absolute;
            width: 6px;
            height: 6px;
            background: gold;
            border-radius: 50%;
            pointer-events: none;
            opacity: 0.8;
            transform: translate(-50%, -50%);
            box-shadow: 0 0 6px gold;
        }

        /* Glass Card */
        .glass-card {
            backdrop-filter: blur(15px);
            background: rgba(255, 255, 255, 0.15);
            border-radius: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
            padding: 2.5rem;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .glass-card input,
        .glass-card select {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.25);
            border-radius: 0.75rem;
            border: none;
            padding: 0.75rem 1rem 0.75rem 2.5rem;
            width: 100%;
            font-size: 1rem;
            margin-bottom: 1rem;
            color: #fff;
        }

        .glass-card input::placeholder {
            color: #f3f3f3;
        }

        .glass-card i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #fff;
        }

        .login-btn {
            background: linear-gradient(90deg, #facc15, #3b82f6);
            color: #fff;
            font-weight: 600;
            padding: 0.75rem;
            border-radius: 1rem;
            width: 100%;
            transition: all 0.3s ease;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
        }

        .login-btn:hover {
            filter: brightness(1.2);
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.6);
        }
    </style>
</head>

<body>
    <!-- Floating Stars -->
    <div id="stars-container"></div>

    <!-- Glass Card -->
    <div class="glass-card relative mx-auto mt-20">
        <img src="/images/logo.png" alt="Portal Logo" class="w-16 mx-auto mb-4">
        <h2 class="text-2xl font-bold text-white mb-1">Government Citizen Portal</h2>
        <p class="text-white/80 mb-6">Login to your account</p>

        <!-- Flash Messages -->
        <% if (typeof error_msg !=='undefined' && error_msg) { %>
            <div class="mb-4 p-3 bg-red-500/40 text-white rounded-lg">
                <%= error_msg %>
            </div>
            <% } %>
                <% if (typeof success_msg !=='undefined' && success_msg) { %>
                    <div class="mb-4 p-3 bg-green-500/40 text-white rounded-lg">
                        <%= success_msg %>
                    </div>
                    <% } %>

                        <form action="/login" method="POST" class="relative space-y-3">
                            <div class="relative">
                                <i class="fa-solid fa-user absolute"></i>
                                <input type="text" name="identifier" placeholder="Email / National ID / Phone"
                                    value="<%= oldInput?.identifier || '' %>" required>
                            </div>
                            <div class="relative">
                                <i class="fa-solid fa-lock absolute"></i>
                                <input type="password" id="password" name="password" placeholder="Password" required>
                                <button type="button" class="absolute right-3 top-1/2 -translate-y-1/2 text-white"
                                    onclick="togglePassword('password')">
                                    <i class="fa-solid fa-eye"></i>
                                </button>
                            </div>
                            <button type="submit" class="login-btn"><i class="fa-solid fa-right-to-bracket"></i>
                                Login</button>
                        </form>

                        <div class="mt-4 flex justify-between text-sm text-white/80">
                            <a href="/forgot-password" class="hover:underline">Forgot password?</a>
                            <a href="/register" class="hover:underline">Register</a>
                        </div>
    </div>

    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            input.type = input.type === 'password' ? 'text' : 'password';
        }

        // Floating stars on mouse move
        const starsContainer = document.getElementById('stars-container');
        document.body.addEventListener('mousemove', e => {
            const star = document.createElement('div');
            star.classList.add('star');
            star.style.left = e.clientX + 'px';
            star.style.top = e.clientY + 'px';
            starsContainer.appendChild(star);

            setTimeout(() => {
                star.remove();
            }, 1000);
        });
    </script>
</body>

</html>