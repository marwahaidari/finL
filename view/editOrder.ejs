<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ویرایش سفارش</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        body {
            font-family: Vazir, sans-serif;
            background: linear-gradient(135deg, #f0f4f8, #d9e2ec);
        }

        .card {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 1.5rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        input:focus,
        textarea:focus,
        select:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.4);
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center p-6">

    <div class="card p-8 w-full max-w-xl">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800 flex items-center justify-center gap-2">
            <i data-lucide="edit-3" class="text-blue-600"></i> ویرایش سفارش
        </h1>

        <form action="/orders/edit/<%= order.id %>" method="POST" enctype="multipart/form-data" class="space-y-6">

            <!-- عنوان سفارش -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">عنوان سفارش</label>
                <input type="text" name="title" required value="<%= order.title %>"
                    class="w-full border border-gray-300 rounded-xl p-4 text-gray-800 placeholder-gray-400 transition duration-200 hover:border-blue-400 focus:border-blue-500">
            </div>

            <!-- توضیحات -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">توضیحات</label>
                <textarea name="description" required
                    class="w-full border border-gray-300 rounded-xl p-4 h-40 text-gray-800 placeholder-gray-400 transition duration-200 hover:border-blue-400 focus:border-blue-500 resize-none"><%= order.description %></textarea>
            </div>

            <!-- دپارتمان -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">دپارتمان</label>
                <select name="department" required
                    class="w-full border border-gray-300 rounded-xl p-4 text-gray-800 transition duration-200 hover:border-blue-400 focus:border-blue-500">
                    <option value="">-- انتخاب دپارتمان --</option>
                    <option value="Sales" <%=order.department==='Sales' ? 'selected' : '' %>>فروش</option>
                    <option value="Support" <%=order.department==='Support' ? 'selected' : '' %>>پشتیبانی</option>
                    <option value="IT" <%=order.department==='IT' ? 'selected' : '' %>>فناوری اطلاعات</option>
                    <option value="HR" <%=order.department==='HR' ? 'selected' : '' %>>منابع انسانی</option>
                </select>
            </div>

            <!-- اولویت -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">اولویت</label>
                <select name="priority" required
                    class="w-full border border-gray-300 rounded-xl p-4 text-gray-800 transition duration-200 hover:border-blue-400 focus:border-blue-500">
                    <option value="">-- انتخاب اولویت --</option>
                    <option value="Low" <%=order.priority==='Low' ? 'selected' : '' %>>کم</option>
                    <option value="Medium" <%=order.priority==='Medium' ? 'selected' : '' %>>متوسط</option>
                    <option value="High" <%=order.priority==='High' ? 'selected' : '' %>>زیاد</option>
                </select>
            </div>

            <!-- تاریخ تخمینی -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">تاریخ تخمینی</label>
                <input type="date" name="eta" value="<%= order.eta ? order.eta.toISOString().split('T')[0] : '' %>"
                    class="w-full border border-gray-300 rounded-xl p-4 text-gray-800 transition duration-200 hover:border-blue-400 focus:border-blue-500">
            </div>

            <!-- ضمیمه‌ها -->
            <div>
                <label class="block text-gray-700 font-semibold mb-2">افزودن ضمیمه جدید (اختیاری)</label>
                <input type="file" name="attachments" multiple
                    class="w-full border border-gray-300 rounded-xl p-4 text-gray-800 transition duration-200 hover:border-blue-400 focus:border-blue-500">
            </div>

            <!-- دکمه بروزرسانی -->
            <button type="submit"
                class="w-full bg-gradient-to-r from-green-600 to-emerald-600 text-white py-4 rounded-2xl font-bold hover:from-green-700 hover:to-emerald-700 transition flex items-center justify-center gap-3">
                <i data-lucide="save"></i> بروزرسانی سفارش
            </button>
        </form>

        <!-- لینک بازگشت -->
        <div class="text-center mt-6">
            <a href="/orders"
                class="inline-flex items-center gap-2 text-blue-600 font-semibold hover:text-blue-800 transition">
                <i data-lucide="arrow-left"></i> بازگشت به لیست سفارشات
            </a>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>

</body>

</html>