<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register | Government Citizen Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap');

        body {
            font-family: 'Montserrat', sans-serif;
            overflow-x: hidden;
            background: linear-gradient(135deg, #0f172a, #1e293b);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 6rem;
            position: relative;
        }

        .circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(250, 204, 21, 0.15);
            animation: float 12s infinite;
            z-index: 0;
        }

        .card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 1rem;
            padding: 2.5rem;
            max-width: 520px;
            width: 95%;
            color: #f1f5f9;
            position: relative;
            z-index: 1;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
            margin: 0 auto;
        }

        .input-container {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            border-radius: 1rem;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.12);
            background: rgba(255, 255, 255, 0.03);
            position: relative;
        }

        .input-container i {
            padding: 0 1rem;
            color: #facc15;
            font-size: 1.1rem;
        }

        .input-container input,
        .input-container select {
            flex: 1;
            padding: 0.9rem;
            background: transparent;
            border: none;
            color: #f1f5f9;
            font-size: 0.95rem;
            outline: none;
        }

        .flash-message {
            padding: 0.65rem 1rem;
            border-radius: 0.9rem;
            margin-bottom: 1rem;
        }

        .error-msg {
            background: rgba(248, 113, 113, 0.12);
            color: #fecaca;
        }

        .success-msg {
            background: rgba(132, 204, 22, 0.08);
            color: #bbf7d0;
        }
    </style>
</head>

<body>
    <%- include('layouts/header') %>

        <!-- Floating circles -->
        <div class="circle" style="width:120px;height:120px;top:12%;left:6%;"></div>
        <div class="circle" style="width:200px;height:200px;bottom:18%;right:12%;"></div>

        <main class="card mt-6">
            <div class="text-center mb-6">
                <img src="/images/logo.png" alt="Logo" class="w-16 mx-auto mb-4">
                <h2 class="text-2xl font-bold text-gray-100">Create an account</h2>
                <p class="text-gray-400">Register to use GovPortal</p>
            </div>

            <!-- Flash messages (safe checks) -->
            <% if (typeof error_msg !=='undefined' && error_msg) { %>
                <div class="flash-message error-msg">
                    <%= error_msg %>
                </div>
                <% } %>

                    <% if (typeof success_msg !=='undefined' && success_msg) { %>
                        <div class="flash-message success-msg">
                            <%= success_msg %>
                        </div>
                        <% } %>

                            <!-- validation errors (array) -->
                            <% if (typeof errors !=='undefined' && Array.isArray(errors) && errors.length) { %>
                                <div class="flash-message error-msg">
                                    <ul class="list-disc ml-4">
                                        <% errors.forEach(e=> { %>
                                            <li>
                                                <%= e.msg || e %>
                                            </li>
                                            <% }) %>
                                    </ul>
                                </div>
                                <% } %>

                                    <!-- Registration form -->
                                    <form action="/register" method="POST" class="space-y-3">
                                        <!-- name -->
                                        <div class="input-container">
                                            <i class="fa-solid fa-user"></i>
                                            <input type="text" name="name" placeholder="Full name" required
                                                value="<%= (typeof formData !== 'undefined' && formData.name) ? formData.name : '' %>" />
                                        </div>

                                        <!-- email -->
                                        <div class="input-container">
                                            <i class="fa-solid fa-envelope"></i>
                                            <input type="email" name="email" placeholder="Email address" required
                                                value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>" />
                                        </div>

                                        <!-- national id -->
                                        <div class="input-container">
                                            <i class="fa-solid fa-id-card"></i>
                                            <input type="text" name="national_id" placeholder="National ID"
                                                value="<%= (typeof formData !== 'undefined' && formData.national_id) ? formData.national_id : '' %>" />
                                        </div>

                                        <!-- phone -->
                                        <div class="input-container">
                                            <i class="fa-solid fa-phone"></i>
                                            <input type="text" name="phone" placeholder="Phone number"
                                                value="<%= (typeof formData !== 'undefined' && formData.phone) ? formData.phone : '' %>" />
                                        </div>

                                        <!-- password -->
                                        <div class="input-container">
                                            <i class="fa-solid fa-lock"></i>
                                            <input type="password" name="password" placeholder="Password" required />
                                        </div>

                                        <!-- confirm password -->
                                        <div class="input-container">
                                            <i class="fa-solid fa-lock"></i>
                                            <input type="password" name="password2" placeholder="Confirm password"
                                                required />
                                        </div>

                                        <!-- optional role (hidden default citizen) -->
                                        <input type="hidden" name="role" value="citizen" />

                                        <button type="submit" class="w-full py-2 rounded-md">Create account</button>
                                    </form>

                                    <p class="mt-4 text-center text-sm text-gray-400">
                                        Already have an account?
                                        <a href="/login" class="text-yellow-300">Login</a>
                                    </p>
        </main>

        <script>
            // optional: small client-side enhancement to disable submit if passwords don't match
            (function () {
                const form = document.querySelector('form');
                if (!form) return;
                form.addEventListener('submit', (e) => {
                    const p1 = form.querySelector('input[name="password"]').value;
                    const p2 = form.querySelector('input[name="password2"]').value;
                    if (p1 !== p2) {
                        e.preventDefault();
                        alert('Passwords do not match');
                    }
                });
            })();
        </script>

        <%- include('layouts/footer') %>
</body>

</html>